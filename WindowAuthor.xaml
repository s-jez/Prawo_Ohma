<Window x:Class="WPF2App.WindowAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2App"
        mc:Ignorable="d"
        Title="App Author" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Images/1.jpg" Stretch="Fill"></Image>
        <Label Content="Wykonał aplikacje:" FontSize="33" HorizontalAlignment="Center" FontFamily="Calibri Light" Margin="0, 50, 0, 0"></Label>
        <Label Content="Stanisław Jeż kl. 3ipG" FontSize="28" HorizontalAlignment="Center" FontFamily="Calibri Light" Margin="0, 85, 0, 0"></Label>
        <Button Width="300" Height="40" Content="Zamknij okno!" FontSize="18" FontFamily="Calibri" Click="btn_Back">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
